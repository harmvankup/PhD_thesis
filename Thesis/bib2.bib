@article{chorus2020,
  title = {Decades Needed for Ecosystem Components to Respond to a Sharp and Drastic Phosphorus Load Reduction},
  author = {Chorus, Ingrid and K{\"o}hler, Antje and Beulker, Camilla and Fastner, Jutta and {van de Weyer}, Klaus and Hegewald, Tilo and Hupfer, Michael},
